/* auto-generated by glue (version {{ version }}) */

{% for image in images %}

@mixin sprite {
	background-image: url({{ sprite_path }});
	background-repeat: no-repeat;
	background-position: {{ image.x }}px {{ image.y }}px;
}

span.{{ image.label }} {
    @include sprite;
}

.{{ image.label }}::slider-thumb {
    @include sprite;
}

.{{ image.label }}::-webkit-slider-thumb {
    @include sprite;
}

.{{ image.label }}::-moz-slider-thumb {
    @include sprite;
}

span.{{ image.label }} {
	height: {{ image.height }}px;
	width: {{ image.width }}px;
	margin-left: {{ (-image.width / 2)|int }}px;
	margin-top: {{ (-image.height / 2)|int }}px;
}

${{ image.label }}-width: {{ image.width }}px;
${{ image.label }}-height: {{ image.height }}px;

{%- endfor %}
